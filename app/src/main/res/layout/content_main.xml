        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1.5">



            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/cv_diig"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#e3f2fd">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Score"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:layout_weight=".5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="00"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:layout_weight=".5"/>

                    <!-- <View
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         android:background="#808080" />-->
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/cvvig"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#e3f2fd">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:weightSum="1"
                        android:layout_marginTop="-10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Night Driving"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1"
                        android:layout_weight="0.5"
                        android:layout_marginTop="-10dp">

                        <TextView
                            android:id="@+id/ntdrivval"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="00"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="textEnd"
                            android:textSize="30dp"
                            android:textStyle="normal"
                            android:gravity="end"
                            android:layout_weight=".4"/>

                        <TextView
                            android:id="@+id/ntdrvval"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Km"
                            android:textColor="#000"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="textStart"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="normal"
                            android:gravity="start"
                            android:layout_weight=".6"/>

                        <!-- <View
                             android:layout_width="1dp"
                             android:layout_height="match_parent"
                             android:background="#808080" />-->
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/vig"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#e3f2fd">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Km"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:layout_weight=".5"/>

                    <TextView
                        android:id="@+id/tv_totalkm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:text="00"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="-25dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:layout_weight=".5"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="1.5">



                <android.support.v7.widget.CardView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/cv_divig"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#e3f2fd">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Acceleration"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>

                        <TextView
                            android:id="@+id/total_ra"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#000"
                            android:layout_marginTop="-25dp"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:text="00"
                            android:textSize="30dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/cv_vig"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#e3f2fd">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Braking"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>

                        <TextView
                            android:id="@+id/total_rd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-25dp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:text="00"
                            android:textSize="30dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/divig"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#e3f2fd">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="OverSpeed"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>

                        <TextView
                            android:id="@+id/total_os"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#000"
                            android:layout_marginTop="-25dp"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:text="00"
                            android:textSize="30dp"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_weight=".5"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">




            <LinearLayout
                android:id="@+id/lina1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:weightSum="1"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/l1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_new"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/cv_driving"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:src="@drawable/dd"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Driving"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal" />

                <View
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="#455A64"/>


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ll1"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:background="@drawable/bg_new"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/cv_leader"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="40dp"
                        android:src="@drawable/team6"
                        android:layout_gravity="center" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LeaderBoard"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal" />

            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight=".5">
     -->
            <View
                android:layout_width="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:background="#455A64"/>
            <!-- </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:weightSum=".5">


                <LinearLayout
                    android:id="@+id/liar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight=".5"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/lgh1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_new"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight=".5">

                        <ImageView
                            android:id="@+id/cv_data"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="40dp"
                            android:src="@drawable/input2"
                            android:layout_gravity="center" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Inputs"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <View
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="#455A64"/>



                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/lldf1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_new"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight=".5">

                        <ImageView
                            android:id="@+id/ivkk6"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="40dp"
                            android:src="@drawable/world6"
                            android:layout_gravity="center" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Trip"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>