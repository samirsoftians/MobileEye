<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/scroll"
    android:background="#fff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_input_uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/end"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <View
            android:layout_marginTop="4sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e0e0e0"/>
        <LinearLayout
            android:id="@+id/linearDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/textCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Select Date"
                android:fontFamily="sans-serif-light"
                android:drawableLeft="@drawable/calendar"
                android:gravity="center"
                android:textColorHint="@color/end"
                android:textColor="@color/end"
                android:textSize="15dp"/>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:background="#e0e0e0" />
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/textCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/cc"
                android:gravity="center"
                android:textColorHint="@color/end"
                android:hint="Select Time"
                android:textColor="@color/end"
                android:textSize="15dp"/>
        </LinearLayout>


        <View
            android:layout_marginTop="-5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_odometer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/odometer"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:hint="Odometer"
                    android:textColorHint="@color/end"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/end"
                    android:inputType="numberDecimal"
                    android:maxLength="30"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_marginTop="0sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#e0e0e0"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_fuel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/car"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#000"
                    android:textColor="@color/end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:hint="Fuel"
                    android:textColorHighlight="@color/end"
                    android:inputType="numberDecimal"
                    android:maxLength="30"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_marginTop="0sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#e0e0e0"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_expense"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/money"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/end"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/end"
                    android:hint="Expense"
                    android:inputType="numberDecimal"
                    android:maxLength="30"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="0sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#e0e0e0"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/full_tank"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:hint="Full Tank"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/end"
                    android:textColorHint="@color/end"
                    android:textSize="16dp"
                    android:maxLength="30"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="0sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#e0e0e0"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">



            <TextView
                android:id="@+id/btn_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/photocamera"
                android:drawablePadding="-50dp"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/end"
                android:text="Add Image"
                android:maxLength="30"
                android:layout_weight=".4"/>


            <ImageView
                android:id="@+id/iv_add_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_weight=".3"
                android:scaleType="fitXY"
                android:src="@drawable/image"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="50dp">
            <Button
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/button_background"
                android:text="Submit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/skyBlue"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>